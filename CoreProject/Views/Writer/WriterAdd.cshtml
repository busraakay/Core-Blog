@model CoreProject.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>WriterAdd</h1>

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Yazar Profil Bilgileri Düzenleme</h1>
                    <br />
                    @*<div class="form-group">
                        <label>Yazar ID</label> 
                        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control" })
                    </div>*@
                <div class="form-group">
                    <label>Yazar Adı</label>
                    @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Yazar Mail</label>
                    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Yazar Şifresi</label>
                    @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="form-label">Yazar Görsel</label>
                    <input class="form-control form-control-sm" name="WriterImage" type="file">
                </div>
                <br />
                <div class="form-group">
                    <label>Yazar Hakkında</label>
                    @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
                </div>
                <button class="btn btn-success">Yazar Ekle</button>
            </div>
        </div>
    </div>
</form>