@using EntityLayer.Concrete
@model List<Blog> 
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Yazarın Blogları</h2>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Blog Başlığı </th>
                        <th> Oluşturma Tarihi </th>
                        <th> Kategori </th>
                        <th> Durum </th>
                        <th> Sil </th>
                        <th> Düzenle </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.BlogID </td>
                            <td> @item.BlogTitle </td>
                            <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
                            <td> @item.Category.CategoryName </td>
                            <td><label class="badge badge-success"> @item.BlogStatus </label></td>
                            <td> <a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger"> Sil </a> </td>
                            <td> <a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning"> Düzenle </a> </td>

                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Blog/BlogAdd" class="mt-4 btn btn-primary">Yeni Blog Oluştur</a>
        </div>
    </div>
</div>
