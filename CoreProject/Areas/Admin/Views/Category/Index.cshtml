@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Kategori Lİstesi </h5>
        </div>
        <div class="ibox-content">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Pasif Yap</th>
                        <th>Aktif Yap</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryID</td>
                            <td>@item.CategoryName</td>
                            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" class="btn btn-danger"
                                   id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');">Pasif Yap</a></td>
                            <td><a href="" class="btn btn-primary">Aktif Yap</a></td>
                            <td><a href="" class="btn btn-warning">Düzenle</a></td>
                        </tr>
                    }
                </tbody>
            </table>


            <a href="/Admin/Category/CategoryAdd/" class="btn btn-info">Yeni Kategori Oluştur</a>
        </div>
    </div>
    <br />
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

</div>

